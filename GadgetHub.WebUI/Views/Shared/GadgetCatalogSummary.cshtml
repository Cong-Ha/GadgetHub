@model GadgetHub.Domain.Entities.GadgetCatalog

<div class="card h-100 p-3 bg-dark border-light text-light mb-3">
    @if(Model.ImageData != null)
    {
        <img class="card-img-top img-fluid d-block mx-auto" style="width:200px; height:200px; object-fit:fill;" alt="Image of product" src="@Url.Action("GetImage", "GadgetCatalog", new { Model.Id })"/>
    }
    <div class="card-body">
        <h5 class="card-title">
            <strong>@Model.Name</strong>
            <span class="badge bg-primary float-end">
                @Model.Price.ToString("c")
            </span>
        </h5>
        <p class="card-text">@Model.Description</p>
        @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <button type="submit" class="btn btn-success d-block mx-auto">Add to cart!</button>
        }
    </div>
</div>
