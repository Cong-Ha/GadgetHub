@model IEnumerable<GadgetHub.Domain.Entities.GadgetCatalog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <div class="card bg-dark border-light text-light">
        <div class="card-header d-flex justify-content-between">
            <h3>Gadget Catalog</h3>
            @Html.ActionLink("Add a new gadget", "Create", null, new { @class = "btn btn-success float-end" })
        </div>
        <div class="card-body">
            <table class="table table-dark table-hover">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new { item.Id }, new { @class="text-decoration-none" })
                        </td>
                        <td>@item.Category</td>
                        <td>@item.Price.ToString("c")</td>
                        <td>
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("Id", item.Id)
                                <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

