@model IEnumerable<string>

<!-- Button to toggle the offcanvas sidebar -->
<button class="navbar-toggler ms-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#navigationOffcanvas" aria-controls="navigationOffcanvas"><span class="navbar-toggler-icon"></span></button>

<!-- Offcanvas sidebar -->
<div class="offcanvas offcanvas-start bg-dark text-light" tabindex="-1" id="navigationOffcanvas" aria-labelledby="navigationOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="navigationOffcanvasLabel">Navigation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="d-grid gap-2">
            @Html.ActionLink("Home", "List", "GadgetCatalog", null, new { @class = "btn btn-outline-primary w-100 btn-lg mb-2" })
            @foreach (var link in Model)
            {
                @Html.RouteLink(link, new
                {
                    controller = "GadgetCatalog",
                    action = "List",
                    category = link,
                    page = 1
                }, new { @class = "btn btn-outline-light w-100 btn-lg mb-2 " + (link == ViewBag.SelectedCategory ? "active" : "") });
            }
        </div>
    </div>
</div>